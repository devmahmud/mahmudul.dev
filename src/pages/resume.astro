---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/components/shared/Hero.astro';
import Education from '@/components/resume/Education.astro';
import Sidebar from '@/components/resume/Sidebar.astro';
import Skills from '@/components/resume/Skills.astro';
import CoverLetter from '@/components/resume/CoverLetter.astro';
import Experiences from '@/components/resume/Experiences.astro';
---

<Layout title="Resume">
  <div class="space-y-16 py-8">
    <!-- Page Header with gradient -->
    <Hero title="Resume" description="Software Engineer passionate about creating innovative solutions and beautiful user experiences." />

    <!-- Resume Content with gradient sections -->
    <div class="grid gap-8 lg:grid-cols-[1fr_2fr] lg:gap-12">
      <!-- Left Column - Profile & Skills -->
      <section class="relative space-y-8">
        <div class="relative space-y-8">
          <Sidebar />
          <Skills />
        </div>
      </section>

      <!-- Right Column - Experience & Education -->
      <section class="relative space-y-8">
        <div class="relative space-y-8">
          <CoverLetter />
          <Experiences />
          <Education />
        </div>
      </section>
    </div>
  </div>
</Layout>
