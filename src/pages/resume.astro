---
import Layout from '@/layouts/Layout.astro';
import Education from '@/components/resume/Education.astro';
import Sidebar from '@/components/resume/Sidebar.astro';
import Skills from '@/components/resume/Skills.astro';
import CoverLetter from '@/components/resume/CoverLetter.astro';
import Experiences from '@/components/resume/Experiences.astro';
---

<Layout title="Resume">
  <div class="space-y-16 py-8">
    <!-- Page Header with gradient -->
    <section class="relative space-y-8">
      <!-- Header background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 via-purple-500/20 to-violet-500/20 rounded-3xl blur-3xl"></div>
      
      <div class="relative text-center space-y-4">
        <h1 class="text-3xl font-bold text-white sm:text-4xl lg:text-5xl">
          Resume
        </h1>
        <div class="h-1 w-20 bg-gradient-to-r from-indigo-400 to-purple-400 rounded-full mx-auto"></div>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">
          Software Engineer passionate about creating innovative solutions and beautiful user experiences.
        </p>
      </div>
    </section>

    <!-- Resume Content with gradient sections -->
    <div class="grid gap-8 lg:grid-cols-[1fr_2fr] lg:gap-12">
      <!-- Left Column - Profile & Skills -->
      <section class="relative space-y-8">
        <div class="absolute inset-0 bg-gradient-to-r from-violet-500/15 to-purple-500/15 rounded-3xl blur-2xl"></div>
        <div class="relative space-y-8">
          <Sidebar />
          <Skills />
        </div>
      </section>

      <!-- Right Column - Experience & Education -->
      <section class="relative space-y-8">
        <div class="absolute inset-0 bg-gradient-to-r from-purple-500/15 to-indigo-500/15 rounded-3xl blur-2xl"></div>
        <div class="relative space-y-8">
          <CoverLetter />
          <Experiences />
          <Education />
        </div>
      </section>
    </div>
  </div>
</Layout>
