---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import PostsLists from "@/components/post/PostsList.astro";

const posts = (await getCollection("posts")).filter(
  (post) => post.data.planned
);
---

<Layout title="Planned Posts">
  <main class="slide-enter-content flex flex-col gap-8">
    <h1 class="text-2xl md:text-3xl text-neutral-100 font-sans leading-8">Planned Posts</h1>
    <PostsLists posts={posts} />
  </main>
</Layout>
