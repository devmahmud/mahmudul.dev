---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import PostsLists from "@/components/post/PostsList.astro";

const posts = (await getCollection("posts")).filter(
  (post) => post.data.planned
);
---

<Layout title="Planned Posts">
  <div class="space-y-16 py-8">
    <!-- Page Header with gradient -->
    <section class="relative space-y-8">
      <!-- Header background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/20 via-indigo-500/20 to-violet-500/20 rounded-3xl blur-3xl"></div>
      
      <div class="relative text-center space-y-4">
        <h1 class="text-3xl font-bold text-white sm:text-4xl lg:text-5xl">
          Planned Posts
        </h1>
        <div class="h-1 w-20 bg-gradient-to-r from-purple-400 to-indigo-400 rounded-full mx-auto"></div>
        <p class="text-lg text-slate-300 max-w-2xl mx-auto">
          Upcoming articles and tutorials I'm working on.
        </p>
      </div>
    </section>

    <!-- Planned Posts Content -->
    <section class="relative">
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 rounded-3xl blur-2xl"></div>
      <div class="relative">
        <PostsLists posts={posts} />
      </div>
    </section>
  </div>
</Layout>
