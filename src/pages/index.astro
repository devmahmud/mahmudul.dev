---
import { getCollection } from 'astro:content';

import Layout from '@/layouts/Layout.astro';
import SocialLinks from '@/components/SocialLinks.astro';
import FeaturedPostCard from '@/components/post/FeaturedPostCard.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import QuoteCard from '@/components/QuoteCard.astro';
import Link from '@/components/shared/Link.astro';
import convertAsteriskToStrongTag from '@/utils/convertAsteriskToStrongTag';

import presentation from '@/data/presentation';
import projects from '@/data/projects';

const allPosts = await getCollection('posts');

const posts = allPosts
  .filter((post) => !post.data.planned)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());

const plannedPosts = allPosts
  .filter((post) => post.data.planned)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime());
---

<Layout title="Mahmudul Alam ‚Äî Senior Software Engineer | TypeScript, React, Node.js" description="Senior Software Engineer building with TypeScript, React, Node.js, Python, Go, and AWS. Writing about web development, architecture, performance, and developer experience." keywords={["Senior Software Engineer","TypeScript","React","Node.js","Astro","Next.js","AWS","Python","Go","Bangladesh"]}>
  <main class="space-y-24">
    <!-- Hero Section -->
    {
      /* Person JSON-LD for homepage */
    }
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: 'Mahmudul Alam',
      url: 'https://mahmudul.dev',
      email: presentation.mail,
      sameAs: presentation.socials?.map((s) => s.link).filter(Boolean) || [],
      jobTitle: 'Senior Software Engineer',
      description: presentation.description.replace(/<[^>]+>/g, ''),
    })} />
    <section class="relative space-y-12" aria-labelledby="hero-heading">
      <!-- Hero background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 via-purple-500/20 to-violet-500/20 rounded-3xl blur-3xl" aria-hidden="true"></div>
      
      <div class="relative space-y-8">
        <div class="space-y-3">
          <div class="flex flex-wrap items-center gap-2 sm:gap-4">
            <h1 id="hero-heading" class="text-3xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">
              Hi, I'm
            </h1>
            <span class="bg-gradient-to-r animate-gradient from-indigo-400 via-purple-400 to-violet-400 bg-clip-text text-3xl font-extrabold text-transparent sm:text-3xl lg:text-4xl xl:text-5xl">
              &lt;Mahmudul::Alam&gt;
            </span>
            <span class="wave text-3xl sm:text-3xl lg:text-4xl xl:text-5xl" role="img" aria-label="waving hand">üëã</span>
          </div>
          <h2 class="text-xl font-medium sm:text-2xl lg:text-3xl xl:text-4xl">‡¶Æ‡¶æ‡¶π‡¶Æ‡ßÅ‡¶¶‡ßÅ‡¶≤ ‡¶Ü‡¶≤‡¶Æ</h2>
        </div>
        
        <div>
          <p class="text-lg leading-relaxed text-gray-300 lg:text-xl" set:html={convertAsteriskToStrongTag(presentation.description)} />
        </div>
        
        <div class="pt-4 w-full overflow-x-auto">
          <div class="min-w-fit">
            <SocialLinks />
          </div>
        </div>
      </div>

    <!-- Quote Line -->
    <QuoteCard />

    </section>

  

    <!-- Projects Section -->
    <section class="relative space-y-12" aria-labelledby="projects-heading">
      <!-- Section background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/15 to-purple-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
      
      <div class="relative space-y-8">
        <div class="flex items-center justify-between">
          <div class="space-y-2">
            <h2 id="projects-heading" class="text-2xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">
              Selected Projects
            </h2>
            <div class="h-1 w-20 bg-gradient-to-r from-indigo-400 to-purple-400 rounded-full" aria-hidden="true"></div>
          </div>
          <span class="text-lg font-medium text-gray-400">({projects.length})</span>
        </div>
        
        {projects.length === 0 && (
          <div class="backdrop-blur-2xl bg-white/5 border border-white/10 rounded-2xl p-8 shadow-2xl">
            <p class="text-xl text-gray-300">Oops, I must work^^^^^</p>
          </div>
        )}

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {projects.length !== 0 && projects.map((project) => <ProjectCard {...project} />)}
        </div>
      </div>
    </section>

    <!-- Latest Posts Section -->
    <section class="relative space-y-12" aria-labelledby="latest-posts-heading">
      <!-- Section background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-violet-500/15 to-purple-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
      
      <div class="relative space-y-8">
        <div class="flex items-center justify-between">
          <div class="space-y-2">
            <h2 id="latest-posts-heading" class="text-2xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">Latest Posts</h2>
            <div class="h-1 w-20 bg-gradient-to-r from-violet-400 to-purple-400 rounded-full" aria-hidden="true"></div>
          </div>
          <Link href="/posts" label="View all posts" isUnderline target="_self" />
        </div>
        
        {posts.length === 0 && (
          <div class="backdrop-blur-2xl bg-white/5 border border-white/10 rounded-2xl p-8 shadow-2xl">
            <p class="text-xl text-gray-300">Soon, stay connected <span role="img" aria-label="eyes">üëÄ</span>...</p>
          </div>
        )}

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {
            posts.length !== 0 &&
              posts
                .slice(0, 3)
                .map((post) => (
                  <FeaturedPostCard
                    publishedAt={post.data.publishedAt}
                    title={post.data.title}
                    description={post.data.description}
                    slug={post.slug}
                  />
                ))
          }
        </div>
      </div>
    </section>

    <!-- Planned Posts Section -->
    <section class="relative space-y-12" aria-labelledby="planned-posts-heading">
      <!-- Section background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-purple-500/15 to-indigo-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
      
      <div class="relative space-y-8">
        <div class="flex items-center justify-between">
          <div class="space-y-2">
            <h2 id="planned-posts-heading" class="text-2xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">Planned Posts</h2>
            <div class="h-1 w-20 bg-gradient-to-r from-purple-400 to-indigo-400 rounded-full" aria-hidden="true"></div>
          </div>
          <Link href="/planned" label="See my plans" isUnderline target="_self" />
        </div>
        
        {plannedPosts.length === 0 && (
          <div class="backdrop-blur-2xl bg-white/5 border border-white/10 rounded-2xl p-8 shadow-2xl">
            <p class="text-xl text-gray-300">Soon, stay connected <span role="img" aria-label="eyes">üëÄ</span>...</p>
          </div>
        )}

        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {
            plannedPosts.length !== 0 ? (
              plannedPosts
                .slice(0, 3)
                .map((post) => (
                  <FeaturedPostCard
                    publishedAt={post.data.publishedAt}
                    title={post.data.title}
                    description={post.data.description}
                    slug={post.slug}
                    planned={post.data.planned}
                  />
                ))
            ) : (
              <div class="col-span-full backdrop-blur-2xl bg-white/5 border border-white/10 rounded-2xl p-8 shadow-2xl">
                <p class="text-xl text-gray-300">
                  No planned posts for a while, if you have any idea, please{' '}
                  <Link
                    href={`mailto:${presentation.mail}`}
                    label="contact me"
                    class="text-indigo-400 hover:text-indigo-300 transition-colors duration-200"
                  />
                  .
                </p>
              </div>
            )
          }
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="relative space-y-12" aria-labelledby="contact-heading">
      <!-- Section background glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/15 to-indigo-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
      
      <div class="relative space-y-8">
        <div class="space-y-2">
          <h2 id="contact-heading" class="text-4xl font-bold text-white sm:text-5xl">Get in Touch</h2>
          <div class="h-1 w-20 bg-gradient-to-r from-blue-400 to-indigo-400 rounded-full" aria-hidden="true"></div>
        </div>
        
        <div class="max-w-3xl space-y-8">
          <div class="backdrop-blur-2xl bg-white/5 border border-white/10 rounded-2xl p-8 shadow-2xl">
            <p class="text-xl text-gray-300">
              Email me at{' '}
              <Link
                href={`mailto:${presentation.mail}`}
                label={presentation.mail}
                class="text-blue-400 hover:text-blue-300 transition-colors duration-200"
              />{' '}
              or follow me via my social links.
            </p>
          </div>
          
          <div class="flex justify-center">
            <SocialLinks />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
