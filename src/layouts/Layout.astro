---
import Header from "../components/Header.astro";
import SEOTags from "@/components/seo/SEOTags.astro";

import "@fontsource/open-sans";
import "@/styles/tailwind.css";
import "@/styles/post.css";
import ThemeProvider from "@/components/ThemeProvider.astro";

export interface Props {
  title?: string;
  og?: {
    title?: string;
    type?: string;
    description?: string;
    image?: string;
    alt?: string;
  };
}

const { title, og } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <SEOTags title={title} og={og} />

  <body
    class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 bg-[#050505] px-10 py-8 text-sm text-neutral-400 dark:bg-[#050505] md:gap-20 md:py-16"
  >
    <Header />
    <ThemeProvider />
    <slot />
    <style is:global>
      html {
        font-family: "Inter";
      }
    </style>
  </body>
</html>
