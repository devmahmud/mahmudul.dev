---
export interface Props {
  slug: string;
}

const { slug } = Astro.props;

const image = new URL(`./open-graph/posts/${slug}.png`, Astro.url.origin).href;
const blogUrl = new URL(`./posts/${slug}`, Astro.url.origin).href;
---

<div class="flex w-full justify-center">
  <div
    class="group relative cursor-pointer rounded-lg border-2 border-transparent p-2 shadow-lg transition-all duration-300 ease-in-out hover:border-indigo-500 hover:shadow-xl"
  >
    <a href={blogUrl} target="_blank" rel="noopener noreferrer" aria-label={`Read related post: ${slug}`}>
      <!-- Image -->
      <img
        src={image}
        alt={`Preview image for related post: ${slug}`}
        class="rounded-t-lg object-cover"
        decoding="async"
        loading="eager"
        width="300"
        height="158"
      />
      <div
        class="absolute inset-0 flex items-center justify-center opacity-0 transition-opacity group-hover:opacity-100"
      >
        <span class="text-lg font-semibold text-white">See also</span>
      </div>
    </a>
  </div>
</div>
