---
import ButtonLink from "./shared/ButtonLink.astro";

import MdiTwitter from "~icons/mdi/twitter";
import MdiGithub from "~icons/mdi/github";
import MdiLinkedin from "~icons/mdi/linkedin";
import MdiStackoverflow from '~icons/mdi/stackoverflow';
---

<ul role="list" class="flex flex-row gap-2">
  <li>
    <ButtonLink href="https://github.com/devmahmud">
      <MdiGithub />
      <span class="hidden sm:block">Github</span>
    </ButtonLink>
  </li>
  <li>
    <ButtonLink href="https://www.linkedin.com/in/devmahmud">
      <MdiLinkedin />
      <span class="hidden sm:block">LinkedIn</span>
    </ButtonLink>
  </li>
  <li>
    <ButtonLink href="https://twitter.com/mahmudul__alam">
      <MdiTwitter />
      <span class="hidden sm:block">Twitter</span>
    </ButtonLink>
  </li>
  <li>
    <ButtonLink href="https://stackoverflow.com/users/10956991/mahmudul-alam">
      <MdiStackoverflow />
      <span class="hidden sm:block">Stackoverflow</span>
    </ButtonLink>
  </li>
</ul>
