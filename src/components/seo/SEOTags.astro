---
import { SEO } from "astro-seo";
import { SITE_URL } from "@/data/config";
import { ViewTransitions } from "astro:transitions"

type Props = {
  title?: string;
  description?: string;
  noindex?: boolean;
  og?: {
    title?: string;
    type?: string;
    description?: string;
    image?: string;
    alt?: string;
  };
};

const { title, description, noindex, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Daniel Boll";
const DEFAULT_DESCRIPTION_PAGE =
  "I'm a Tech Lead from Brazil. I love to create technology and use it to make people's lives easier.";
const DEFAULT_URL_SITE = SITE_URL;

const openGraph = {
  title: og?.title || title || DEFAULT_TITLE_PAGE,
  type: og?.type || "website",
  image: og?.image || "/opengraph-image.png",
  alt: og?.alt || "Daniel Boll",
  url: DEFAULT_URL_SITE,
  description: og?.description || description || DEFAULT_DESCRIPTION_PAGE,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={openGraph.title}
    description={openGraph.description}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: "@db_regret",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        {
          name: "twitter:image",
          content: openGraph.image,
        },
        { name: "twitter:card", content: "summary_large_image" },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@db_regret" },
      ],
    }}
  />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <ViewTransitions />
</head>
