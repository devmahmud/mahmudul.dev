---
import type { TocItem } from '@/utils/generate-toc';

interface Props {
	heading: TocItem;
}

const {
	heading: { slug, text, depth, subheadings },
} = Astro.props;
---

<li class={`${depth > 2 ? "ml-4" : ""}`}>
	<a
		class={`block py-1 px-2 rounded-lg text-slate-300 hover:text-indigo-300 hover:bg-white/5 transition-all duration-200 text-xs ${
			depth <= 2 ? "font-medium" : "text-slate-400"
		}`}
		href={`#${slug}`}
		aria-label={`Scroll to section: ${text}`}>{text}</a
	>
	{
		!!subheadings.length && (
			<ul class="mt-1 space-y-1">
				{subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>
