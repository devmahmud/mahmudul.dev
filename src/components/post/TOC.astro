---
import type { MarkdownHeading } from "astro";

import TOCHeading from "./TOCHeading.astro";
import { generateToc } from "@/utils/generate-toc";

interface Props {
	headings: Array<MarkdownHeading>;
}

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<aside class="sticky top-24 order-2 hidden xl:block slide-enter-content w-72 shrink-0">
	<div class="rounded-2xl backdrop-blur-xl bg-white/5 border border-white/10 p-4 shadow-lg">
		<h2 class="font-semibold text-slate-200 mb-4">Table of Contents</h2>
		<ul class="text-sm space-y-2 overflow-y-auto max-h-[calc(100vh-200px)]">
			{toc.map((heading) => <TOCHeading heading={heading} />)}
		</ul>
	</div>
</aside>
