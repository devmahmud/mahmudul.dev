---
import CardLayout from './CardLayout.astro';
import ButtonLink from '@/components/shared/ButtonLink.astro';
import MdiLinkedin from '~icons/mdi/linkedin';

import resume from '@/data/resume';

const { experiences, links } = resume;
---

<CardLayout title="Relevant Experiences">
  <div class="my4 grid gap-6">
    {
      experiences.map((exp) => (
        <div class="space-y-3">
          <div>
            <h4 class="text-lg font-semibold text-white">{exp.jobTitle}</h4>
            <p class="text-sm text-slate-400">
              <span class="text-indigo-400 font-medium">{exp.company}</span> â€¢ {exp.datesEmployed}
            </p>
          </div>
          <p class="text-slate-300 leading-relaxed">{exp.description}</p>
          <div class="flex flex-wrap gap-2">
            {exp.techStack.map((tech) => (
              <span class="px-3 py-1 rounded-full bg-gradient-to-r from-violet-500/20 to-purple-500/20 border border-violet-400/30 text-violet-200 text-xs font-medium hover:from-violet-500/30 hover:to-purple-500/30 transition-all duration-200 cursor-pointer">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))
    }
    <div class="text-center">
      <ButtonLink href={links.linkedIn}>
        <span>See more experiences</span>
        <span>
          <MdiLinkedin />
        </span>
      </ButtonLink>
    </div>
  </div>
</CardLayout>
