---
type Props = {
  classNames?: string;
  title: string;
};

const { classNames, title } = Astro.props;
---

<div class="group relative rounded-2xl backdrop-blur-xl bg-white/5 border border-white/10 p-6 shadow-lg hover:bg-white/10 hover:border-white/20 hover:shadow-xl transition-all duration-300">
  <!-- Cool border animation -->
  <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 via-purple-500/20 to-violet-500/20 rounded-2xl"></div>
    <div class="absolute inset-0 p-[1px] rounded-2xl bg-gradient-to-r from-indigo-500/30 via-purple-500/30 to-violet-500/30">
      <div class="w-full h-full bg-slate-950/90 backdrop-blur-2xl rounded-2xl"></div>
    </div>
  </div>
  
  <div class="relative">
    <h3 class="text-xl font-bold text-white mb-4 bg-gradient-to-r from-indigo-300 to-purple-300 bg-clip-text text-transparent">
      {title}
    </h3>
    <div><slot /></div>
  </div>
</div>
