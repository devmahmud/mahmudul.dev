---
import CardLayout from './CardLayout.astro';
import resume from '@/data/resume';

const skills = resume.skills;
---

<CardLayout title="Skills">
  {
    skills.map((skill) => (
      <div class="my-2 grid gap-1 text-sm">
        <h4 class="text-base font-medium">{skill.category}</h4>
        <div class="m-2 grid grid-cols-6 gap-2">
          {skill.stacks.map((item) => (
            <img
              src={item.icon}
              alt={item.name}
              class="h-[20px] w-[20px]"
              title={`${item.name} - ${Array(item.rate).fill('â˜†').join('')}`}
            />
          ))}
        </div>
      </div>
    ))
  }
</CardLayout>
