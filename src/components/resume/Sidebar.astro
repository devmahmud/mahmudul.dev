---
import ButtonLink from '@/components/shared/ButtonLink.astro';
import resume from '@/data/resume';
---

<div class="relative overflow-hidden rounded-2xl backdrop-blur-2xl backdrop-saturate-150 bg-white/0 border border-white/10 transition duration-300 ease-out shadow-[0_8px_30px_-12px_rgba(0,0,0,0.55),inset_0_1px_0_rgba(255,255,255,0.06)] hover:shadow-[0_16px_40px_-16px_rgba(0,0,0,0.7),inset_0_1px_0_rgba(255,255,255,0.08)] hover:border-white/40 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-indigo-400/40 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950">

  <div class="pointer-events-none absolute inset-0 rounded-2xl shadow-[inset_0_1px_0_rgba(255,255,255,0.05)]" aria-hidden="true"></div>

  <div class="relative text-center">
    <!-- Profile Header with Gradient -->
    <div class="relative p-8 bg-gradient-to-br from-indigo-500/20 via-purple-500/20 to-violet-500/20">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-purple-500/10" aria-hidden="true"></div>
      <div class="relative">
        <img
          class="mx-auto h-32 w-32 rounded-full border-4 border-white/20 shadow-2xl ring-4 ring-indigo-500/20"
          alt={`Profile photo of ${resume.profile.name}`}
          src={resume.profile.avatarUrl}
        />
      </div>
    </div>

    <!-- Profile Info -->
    <div class="relative p-6 space-y-4">
      <h2 class="text-2xl font-bold bg-gradient-to-r from-indigo-300 via-purple-300 to-violet-300 bg-clip-text text-transparent">
        {resume.profile.name}
      </h2>
      
      <div class="flex flex-wrap justify-center gap-2 text-sm">
        {["Python", "JavaScript", "Typescript", "Golang", "Open Source Enthusiast", "Web3"].map((tag) => (
          <span class="px-3 py-1 rounded-full bg-indigo-500/20 border border-indigo-400/30 text-indigo-200">
            {tag}
          </span>
        ))}
      </div>

      <div class="pt-4">
        <ButtonLink class="w-full print:hidden" href={resume.resumeURL} aria-label="Download resume PDF">
          Download Resume
        </ButtonLink>
      </div>
    </div>
  </div>
</div>
