---
import ProjectCard from '@/components/ProjectCard.astro';

export interface Props {
  projects: Array<any>;
}

const { projects } = Astro.props as Props;
---

<section class="relative space-y-12" aria-labelledby="projects-heading">
  <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/15 to-purple-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
  
  <div class="relative space-y-8">
    <div class="flex items-center justify-between">
      <div class="space-y-2">
        <h2 id="projects-heading" class="text-2xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">
          Selected Projects
        </h2>
        <div class="h-1 w-20 bg-gradient-to-r from-indigo-400 to-purple-400 rounded-full" aria-hidden="true"></div>
      </div>
      <span class="text-lg font-medium text-gray-400">({projects.length})</span>
    </div>
    
    {projects.length === 0 && (
      <div class="relative overflow-hidden rounded-2xl backdrop-blur-2xl backdrop-saturate-150 bg-white/0 border border-white/10 p-8 transition-all duration-300 ease-out transform-gpu shadow-[0_8px_30px_-12px_rgba(0,0,0,0.55),inset_0_1px_0_rgba(255,255,255,0.06)]">
        <div class="pointer-events-none absolute inset-0 rounded-2xl shadow-[inset_0_1px_0_rgba(255,255,255,0.05)]"></div>
        <p class="text-xl text-gray-300">Oops, I must work^^^^^</p>
      </div>
    )}

    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {projects.length !== 0 && projects.map((project) => <ProjectCard {...project} />)}
    </div>
  </div>
</section>


