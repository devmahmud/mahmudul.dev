---
import FeaturedPostCard from '@/components/post/FeaturedPostCard.astro';
import Link from '@/components/shared/Link.astro';

export interface Props {
  posts: Array<any>;
}

const { posts } = Astro.props as Props;
---

<section class="relative space-y-12" aria-labelledby="latest-posts-heading">
  <div class="absolute inset-0 bg-gradient-to-r from-violet-500/15 to-purple-500/15 rounded-3xl blur-2xl" aria-hidden="true"></div>
  
  <div class="relative space-y-8">
    <div class="flex items-center justify-between">
      <div class="space-y-2">
        <h2 id="latest-posts-heading" class="text-2xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">Latest Posts</h2>
        <div class="h-1 w-20 bg-gradient-to-r from-violet-400 to-purple-400 rounded-full" aria-hidden="true"></div>
      </div>
      <Link href="/posts" label="View all posts" isUnderline target="_self" />
    </div>
    
    {posts.length === 0 && (
      <div class="relative overflow-hidden rounded-2xl backdrop-blur-2xl backdrop-saturate-150 bg-white/0 border border-white/10 p-8 transition-all duration-300 ease-out transform-gpu shadow-[0_8px_30px_-12px_rgba(0,0,0,0.55),inset_0_1px_0_rgba(255,255,255,0.06)]">
        <div class="pointer-events-none absolute inset-0 rounded-2xl shadow-[inset_0_1px_0_rgba(255,255,255,0.05)]"></div>
        <p class="text-xl text-gray-300">Soon, stay connected <span role="img" aria-label="eyes">ðŸ‘€</span>...</p>
      </div>
    )}

    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {
        posts.length !== 0 &&
          posts
            .slice(0, 3)
            .map((post) => (
              <FeaturedPostCard
                publishedAt={post.data.publishedAt}
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
              />
            ))
      }
    </div>
  </div>
</section>


