---
import SocialLinks from '@/components/SocialLinks.astro';
import QuoteCard from '@/components/QuoteCard.astro';

export interface Props {
  displayNameHTML: string; 
  nativeName?: string; 
  descriptionHTML: string;
}

const { displayNameHTML, nativeName, descriptionHTML } = Astro.props as Props;
---

<section class="relative space-y-12" aria-labelledby="hero-heading">
  <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 via-purple-500/20 to-violet-500/20 rounded-3xl blur-3xl" aria-hidden="true"></div>
  
  <div class="relative space-y-8">
    <div class="space-y-3">
      <div class="flex flex-wrap items-center gap-2 sm:gap-4">
        <h1 id="hero-heading" class="text-3xl font-bold text-white sm:text-3xl lg:text-4xl xl:text-5xl">
          Hi, I'm
        </h1>
        <span class="bg-gradient-to-r animate-gradient from-indigo-400 via-purple-400 to-violet-400 bg-clip-text text-3xl font-extrabold text-transparent sm:text-3xl lg:text-4xl xl:text-5xl" set:html={displayNameHTML} />
        <span class="wave text-3xl sm:text-3xl lg:text-4xl xl:text-5xl" role="img" aria-label="waving hand">ðŸ‘‹</span>
      </div>
      {nativeName && (
        <h2 class="text-xl font-medium sm:text-2xl lg:text-3xl xl:text-4xl">{nativeName}</h2>
      )}
    </div>
    
    <div>
      <p class="text-lg leading-relaxed text-gray-300 lg:text-xl" set:html={descriptionHTML} />
    </div>
    
    <div class="pt-4 w-full overflow-x-auto">
      <div class="min-w-fit">
        <SocialLinks />
      </div>
    </div>
  </div>

  <QuoteCard />
</section>


