---
import type { CollectionEntry } from "astro:content";
import TilCard from "@/components/til/TilCard.astro";

export interface Props {
  tils: CollectionEntry<"tils">[];
}

const { tils } = Astro.props;
---

<article class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  {tils.map((til) => (<TilCard til={til} />))}
</article>
