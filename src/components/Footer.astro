---
import presentation from "@/data/presentation";
---

<footer class="relative mt-16 border-t border-white/10 bg-gradient-to-b from-transparent to-black/20">
  <div class="mx-auto w-full max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      
      <!-- Brand Section -->
      <div class="sm:col-span-2 lg:col-span-1">
        <div class="flex items-center space-x-3 mb-3">
          <div class="w-8 h-8 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center">
            <span class="text-white font-bold">M</span>
          </div>
          <h3 class="text-lg font-bold bg-gradient-to-r from-indigo-400 via-purple-400 to-violet-400 bg-clip-text text-transparent">
            Mahmudul Alam
          </h3>
        </div>
        <p class="text-slate-400 leading-relaxed max-w-sm">
          Full-stack developer passionate about creating beautiful, accessible, and performant web experiences.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold text-slate-200 mb-4">Navigation</h4>
        <ul class="space-y-3">
          <li>
            <a href="/" class="text-slate-400 hover:text-indigo-300 transition-colors duration-200">
              Home
            </a>
          </li>
          <li>
            <a href="/posts" class="text-slate-400 hover:text-indigo-300 transition-colors duration-200">
              Posts
            </a>
          </li>
          <li>
            <a href="/resume" class="text-slate-400 hover:text-indigo-300 transition-colors duration-200">
              Resume
            </a>
          </li>
          <li>
            <a href="/til" class="text-slate-400 hover:text-indigo-300 transition-colors duration-200">
              TIL
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-slate-200 mb-4">Get in Touch</h4>
        <div class="space-y-3">
          <a 
            href={`mailto:${presentation.mail}`}
            class="flex items-center text-slate-400 hover:text-indigo-300 transition-colors duration-200 group"
          >
            <svg class="w-4 h-4 mr-2 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {presentation.mail}
          </a>
          <p class="text-sm text-slate-500">
            Available for freelance projects and collaborations
          </p>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="mt-8 pt-6 border-t border-white/5">
      <div class="flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0">
        
        <!-- Copyright -->
        <div class="text-sm text-slate-500 text-center sm:text-left">
          <p>
            © {new Date().getFullYear()} Mahmudul Alam. Built with 
            <span class="text-indigo-400 hover:text-indigo-300 transition-colors duration-200">♥</span>
          </p>
        </div>

        <!-- Back to Top -->
        <button 
          onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
          class="group flex items-center space-x-2 text-sm text-slate-400 hover:text-indigo-300 transition-colors duration-200"
          aria-label="Back to top"
        >
          <span>Back to top</span>
          <svg class="w-4 h-4 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Subtle gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-slate-950/20 to-transparent pointer-events-none"></div>
</footer>
