---
export interface Props {
  id?: string;
  class?: string;
  glow?: boolean;
  align?: 'center' | 'left';
  title: string;
  description?: string;
}

const { id, class: className = "", glow = true, align = 'center', title, description } = Astro.props as Props;
---

<section id={id} class={`relative space-y-8 ${className}`}>
  {glow && (
    <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/20 via-purple-500/20 to-violet-500/20 rounded-3xl blur-3xl" aria-hidden="true"></div>
  )}
  <div class={`relative ${align === 'center' ? 'text-center' : 'text-left'}`}>
    <h1 class="text-3xl font-bold text-white sm:text-4xl lg:text-5xl">{title}</h1>
    <div class={`h-1 w-20 bg-gradient-to-r from-indigo-400 to-purple-400 rounded-full ${align === 'center' ? 'mx-auto' : ''}`} aria-hidden="true"></div>
    {description && (
      <p class={`text-lg text-slate-300 max-w-2xl ${align === 'center' ? 'mx-auto' : ''} mt-4`} set:html={description} />
    )}
  </div>
</section>


