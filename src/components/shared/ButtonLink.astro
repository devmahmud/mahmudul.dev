---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { ...props } = Astro.props;
---

<a
  class="inline-flex items-center justify-center space-x-2 py-2 px-3 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-neutral-400"
  rel="noreferrer"
  target="_blank"
  {...props}
>
  <slot />
</a>
