---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { ...props } = Astro.props;
---

<a
  class="group relative inline-flex items-center justify-center space-x-2 sm:space-x-3 rounded-2xl backdrop-blur-2xl bg-white/5 border border-white/10 px-3 sm:px-6 py-2 sm:py-3 text-gray-300 transition-all duration-300 ease-out hover:bg-white/10 hover:border-white/20 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:ring-inset overflow-hidden"
  rel="noreferrer"
  target="_blank"
  {...props}
>
  <!-- Animated gradient border -->
  <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
    <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-indigo-500/50 via-purple-500/50 to-violet-500/50 motion-safe:animate-pulse p-[1px]">
      <div class="w-full h-full rounded-2xl bg-slate-950/90 backdrop-blur-2xl"></div>
    </div>
  </div>
  
  <div class="relative">
    <slot />
  </div>
</a>
